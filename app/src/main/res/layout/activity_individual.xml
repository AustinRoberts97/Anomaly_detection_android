<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">\


    <TextView
        android:id="@+id/MSUFCU"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="             MSUFCU"
        android:textColor="@color/msufcugreen"
        android:textSize="26sp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/figureicon"
        />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/amount1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_gravity="start"
        android:text="Transaction Amount"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"/>

        <TextView
        android:id="@+id/amount2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_gravity="end"
        android:text=""
        android:gravity="center_vertical"
        android:textSize="18dp"
        android:textAlignment="textEnd"
        android:paddingRight="8dp"
            tools:ignore="RtlCompat" />/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/postdate1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:text="Posted Date"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"/>

        <TextView
            android:id="@+id/postdate2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:text=""
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:textAlignment="textEnd"
            android:paddingRight="8dp"
            tools:ignore="RtlCompat" />/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/card1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:text="Card Number"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"/>

        <TextView
            android:id="@+id/card2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:text=""
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:textAlignment="textEnd"
            android:paddingRight="8dp"
            tools:ignore="RtlCompat" />/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/store1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:text="Card Acceptor"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"/>

        <TextView
            android:id="@+id/store2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:text=""
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:textAlignment="textEnd"
            android:paddingRight="8dp"
            tools:ignore="RtlCompat" />/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/warning1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:text="Warning"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"/>

        <TextView
            android:id="@+id/warning2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:text=""
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:textAlignment="textEnd"
            android:paddingRight="8dp"
            tools:ignore="RtlCompat" />/>
    </LinearLayout>


</LinearLayout>